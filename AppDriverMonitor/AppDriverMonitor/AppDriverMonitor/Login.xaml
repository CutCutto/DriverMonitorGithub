<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppDriverMonitor.Login"  Title="Login">
    <ContentPage.Content>
        <StackLayout>
            <Entry Placeholder="Email" Keyboard="Email" x:Name="enEmail" ></Entry>

            <Entry Placeholder="Password" IsPassword="True" x:Name="enPassword" ></Entry>
            <!-- Sign In button -->
            <Button x:Name="btnSignIn" Clicked="btnSignIn_Clicked"  Text="Sign In" ></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>